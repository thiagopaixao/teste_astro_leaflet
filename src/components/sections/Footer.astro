---
const { content } = Astro.props;
---

<footer class="bg-blue-900 text-white py-8">
  <div class="container mx-auto px-4">
    <div class="flex flex-wrap justify-between items-center">
      <div class="w-full md:w-1/2 mb-4 md:mb-0">
        <h3 class="text-2xl font-bold mb-2">Descubra o Brasil</h3>
        <p class="text-sm">Uma jornada interativa pelas maravilhas do Brasil</p>
      </div>
      <div class="w-full md:w-1/2 text-center md:text-right">
        <div set:html={content} class="text-sm"></div>
        <div class="mt-4">
          <a href="#" class="text-white hover:text-blue-300 mr-4">Facebook</a>
          <a href="#" class="text-white hover:text-blue-300 mr-4">Instagram</a>
          <a href="#" class="text-white hover:text-blue-300">Twitter</a>
        </div>
      </div>
    </div>
  </div>
</footer>
