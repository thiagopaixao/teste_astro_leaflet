---
import MapEditor from '../MapEditor.svelte';
const { latitude, longitude, zoom, geojson } = Astro.props;
---

<section class="py-16 bg-gray-100">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-blue-800 mb-8">
      Explore o Mapa do Brasil
    </h2>
    <MapEditor client:load {latitude} {longitude} {zoom} {geojson} />
  </div>
</section>

<script>
  window.addEventListener('error', function(event) {
    console.log('Erro capturado:', event.error);
  });
</script>
